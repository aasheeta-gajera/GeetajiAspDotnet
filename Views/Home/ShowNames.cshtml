@model List<Shloka>

@{
    ViewData["Title"] = "Show Names";
}

<div class="back-button-container">
    <a href="@Url.Action("Index", "Home")" class="back-button">
        <i class="fas fa-arrow-left"></i> Back to All Chapters
    </a>
</div>

<div class="position-relative text-center">
    <!-- Top Image -->
    <img src="~/Assets/image.png" class="img-fluid" style="max-height: 300px; width: auto;" alt="Top Image">

    <!-- Bhagavad Gita Shloka Overlay -->
    <div class="position-absolute top-50 start-50 translate-middle text-center p-3"
         style="color: #FF8C00; font-size: 20px; font-weight: bold; line-height: 1.6; border-radius: 10px;">
        <p class="mb-0">
            यदा यदा हि धर्मस्य ग्लानिर्भवति भारत। <br>
            अभ्युत्थानमधर्मस्य तदात्मानं सृजाम्यहम्॥ <br>
            परित्राणाय साधूनां विनाशाय च दुष्कृताम् <br>
            धर्मसंस्थापनार्थाय सम्भवामि युगे युगे॥
        </p>
    </div>
</div>

<div class="chapter-info-container">
    <div class="chapter-info left">
        <h3 class="mb-0" style="color: #FF8C00;">@ViewBag.ChapterName</h3>
    </div>
    <div class="chapter-info right">
        <h3 class="mb-0" style="color: #FF8C00;">Total Shlokas: @ViewBag.TotalShlokas</h3>
    </div>
</div>

@{
    int counter = 1;
}
@foreach (var item in Model)
{
    <div class="custom-container" onclick="window.location.href='@Url.Action("ShowShloka", "Home", new { id = item.Id })'">
        <div class="count-section">
            @counter
        </div>
        <div class="list-section">
            @item.ShlokaText
        </div>
    </div>
    counter++;
}

<style>
   .back-button-container {
        margin: 10px 15px 20px 15px;
   }
   
   .back-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #FF8C00;
        color: white;
        font-weight: bold;
        text-decoration: none;
        border-radius: 10px;
        transition: background-color 0.3s ease;
   }
   
   .back-button:hover {
        background-color: #E67E00;
        color: white;
        text-decoration: none;
   }

   .custom-container {
        display: flex;
        border: 3px solid #FF8C00;
        border-radius: 10px;
        margin-bottom: 10px;
        overflow: hidden;
        cursor: pointer; /* Make it clear it's clickable */
        transition: transform 0.2s ease-in-out; /* Smooth effect on hover */
   }

   .custom-container:hover {
        transform: scale(1.03); /* Slight zoom effect */
   }

   /* Count section (smaller, white) */
   .count-section {
        background-color: white;
        font-size: 18px;
        font-weight: bold;
        flex: 0.2; /* 20% width */
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 3px solid #FF8C00;
   }

   /* List section (larger, orange) */
   .list-section {
        background-color: #FF8C00;
        color: white;
        font-weight: bold;
        flex: 0.8; /* 80% width */
        padding: 15px;
        display: flex;
        align-items: center;
   }

   .chapter-info-container {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
        padding: 0 15px;
   }

   .chapter-info {
        flex: 1;
        text-align: center;
   }

   .chapter-info h3 {
        font-size: 1.2em;
        font-weight: bold;
   }
</style>
