@model List<Language>

<h2>Select a Shloka</h2>

@foreach (var item in Model)
{
    <div class="custom-container" onclick="window.location.href='@Url.Action("ShowShloka", "Home", new { id = item.Id })'">
        <div class="count-section">
            @item.Id
        </div>
        <div class="list-section">
            @item.Name
        </div>
    </div>
}

<style>
   .custom-container {
        display: flex;
        border: 3px solid #FF8C00;
        border-radius: 10px;
        margin-bottom: 10px;
        overflow: hidden;
        cursor: pointer; /* Make it clear it's clickable */
        transition: transform 0.2s ease-in-out; /* Smooth effect on hover */
   }

   .custom-container:hover {
        transform: scale(1.03); /* Slight zoom effect */
   }

   /* Count section (smaller, white) */
   .count-section {
        background-color: white;
        font-size: 18px;
        font-weight: bold;
        flex: 0.2; /* 20% width */
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 3px solid #FF8C00;
   }

   /* List section (larger, orange) */
   .list-section {
        background-color: #FF8C00;
        color: white;
        font-weight: bold;
        flex: 0.8; /* 80% width */
        padding: 15px;
        display: flex;
        align-items: center;
   }
</style>
