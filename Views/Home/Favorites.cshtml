@{
    ViewData["Title"] = "Favorite";
}

<div class="container">
    <h2 class="favorite-title">Favorite</h2>

    <div id="favorites-list" class="favorite-list">
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadFavorites();
        });

        function loadFavorites() {
            const favorites = JSON.parse(localStorage.getItem('favorites') || '[]');
            const favoritesList = document.getElementById('favorites-list');
            favoritesList.innerHTML = '';

            if (favorites.length === 0) {
                favoritesList.innerHTML = `
                    <div class="text-center">
                        <p>You haven't added any shlokas to your favorites yet.</p>
                    </div>`;
                return;
            }

            // Sort favorites by shlokaId to maintain order
            favorites.sort((a, b) => a.shlokaId - b.shlokaId);

            favorites.forEach(favorite => {
                const favoriteItem = document.createElement('div');
                favoriteItem.className = 'favorite-item';
                favoriteItem.innerHTML = `
                    <div class="favorite-circle">
                        <i class="fas fa-heart"></i>
                    </div>
                    <div class="chapter-info">
                        <span class="chapter-name">${favorite.chapterName}</span>
                    </div>
                    <div class="shloka-progress" style="margin-left: auto;">
                        <span>${favorite.shlokaNumber}/${favorite.totalShlokas}</span>
                    </div>`;
                
                // Make the item clickable to go to the shloka
                favoriteItem.addEventListener('click', function() {
                    window.location.href = `/Home/ShowShloka/${favorite.shlokaId}`;
                });
                
                favoritesList.appendChild(favoriteItem);
            });
        }
    </script>
}

<style>
    .favorite-title {
        color: #FF8C00;
        text-align: center;
        font-size: 2rem;
        margin: 1.5rem 0;
    }

    .favorite-list {
        padding: 1rem;
    }

    .favorite-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        transition: background-color 0.2s ease;
        position: relative;
    }

    .favorite-item:hover {
        background-color: #fff5e6;
    }

    .favorite-circle {
        width: 50px;
        height: 50px;
        background-color: #FF8C00;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
    }

    .favorite-circle i {
        color: white;
        font-size: 1.5rem;
    }

    .chapter-info {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .chapter-name {
        font-size: 1.2rem;
        color: #333;
        font-weight: 500;
    }

    .shloka-number {
        font-size: 0.9rem;
        color: #666;
        margin-top: 0.2rem;
    }

    .shloka-progress {
        color: #FF8C00;
        font-size: 1.1rem;
        font-weight: bold;
        margin-left: auto;
    }
</style> 