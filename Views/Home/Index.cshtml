@{
    ViewData["Title"] = "Home Page";
}

<div class="position-relative text-center">
    <!-- Top Image -->
    <img src="~/Assets/image.png" class="img-fluid" style="max-height: 300px; width: auto;" alt="Top Image">

    <!-- Bhagavad Gita Shloka Overlay -->
    <div class="position-absolute top-50 start-50 translate-middle text-center p-3"
         style="color: #FF8C00; font-size: 20px; font-weight: bold; line-height: 1.6; border-radius: 10px;">
        <p class="mb-0">
            यदा यदा हि धर्मस्य ग्लानिर्भवति भारत। <br>
            अभ्युत्थानमधर्मस्य तदात्मानं सृजाम्यहम्॥ <br>
            परित्राणाय साधूनां विनाशाय च दुष्कृताम् <br>
            धर्मसंस्थापनार्थाय सम्भवामि युगे युगे॥
        </p>
    </div>
</div>

<!-- List Section -->
    <h2 class="text-center">भगवद गीता</h2>

    @model List<Language>

    @foreach (var lang in Model)
    {
        <div class="custom-container" onclick="window.location.href='@Url.Action("ShowNames", "Home", new { index = Model.IndexOf(lang) })'">
            <div class="count-section">
                @lang.Number1
            </div>
            <div class="list-section">
                @lang.Name1
            </div>
        </div>
    }


<!-- Styles -->
<style>
   .custom-container {
        display: flex;
        border: 3px solid #FF8C00;
        border-radius: 10px;
        margin-bottom: 10px;
        overflow: hidden;
        cursor: pointer; /* Make it clear it's clickable */
        transition: transform 0.2s ease-in-out; /* Smooth effect on hover */
   }

   .custom-container:hover {
        transform: scale(1.03); /* Slight zoom effect */
   }

   /* Count section (smaller, white) */
   .count-section {
        background-color: white;
        font-size: 18px;
        font-weight: bold;
        flex: 0.2; /* 20% width */
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 3px solid #FF8C00;
   }

   /* List section (larger, orange) */
   .list-section {
        background-color: #FF8C00;
        color: white;
        font-weight: bold;
        flex: 0.8; /* 80% width */
        padding: 15px;
        display: flex;
        align-items: center;
   }
</style>
