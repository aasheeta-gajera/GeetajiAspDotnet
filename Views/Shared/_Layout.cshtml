<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Geetaji</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
        /* Header and Footer Styles */
        .custom-header {
            background-color: #FF8C00;
            padding: 15px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            color: white;
        }

        .custom-footer {
            background-color: #FF8C00;
            padding: 10px;
            text-align: center;
            font-size: 16px;
            font-weight: bold;
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .nav-link {
            color: white !important;
            font-weight: bold;
        }

        .navbar {
            background-color: #FF8C00 !important;
        }

        .navbar .nav-link {
            color: white !important;
            font-weight: bold;
            padding: 10px 20px;
            margin: 0 5px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .navbar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .navbar .nav-link.active {
            background-color: white;
            color: #FF8C00 !important;
        }

        /* Navigation Icons */
        .nav-icon-container {
            display: flex;
            gap: 10px;
        }
        
        .nav-icon-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background-color: #FF8C00;
            color: white !important;
            font-weight: bold;
            text-decoration: none;
            border-radius: 8px;
            border: 2px solid white;
            transition: all 0.3s ease;
        }
        
        .nav-icon-btn:hover {
            background-color: white;
            color: #FF8C00 !important;
            text-decoration: none;
        }
        
        /* Disabled navigation button */
        .nav-icon-btn.disabled {
            opacity: 0.5;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Geetaji</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    <a href="@Url.Action("Index", "Home")" class="nav-icon-btn" title="Home">
                            <i class="fas fa-home"></i>
                        </a>
                        <!-- <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Favorites" ? "active" : "")" asp-controller="Home" asp-action="Favorites">Favorites</a>
                        </li>
                    </ul>
                    
                    <!-- Navigation Icons - Always visible -->
                    <div class="nav-icon-container">
                        <!-- Home button - always visible -->
                        <!-- <a href="@Url.Action("Index", "Home")" class="nav-icon-btn" title="Home">
                            <i class="fas fa-home"></i>
                        </a>
                         -->    
                        <!-- Navigation based on current view -->
                        @if (ViewContext.RouteData.Values["Action"]?.ToString() == "ShowShloka")
                        {
                            <!-- Chapter list button -->
                            @if (ViewBag.ChapterId != null)
                            {
                                <a href="@Url.Action("ShowNames", "Home", new { chapterId = ViewBag.ChapterId })" class="nav-icon-btn" title="Chapter Shlokas">
                                    <i class="fas fa-list"></i>
                                </a>
                            }
                        }
                        
                        <!-- Chapter navigation for ShowNames view -->
                        @if (ViewContext.RouteData.Values["Action"]?.ToString() == "ShowNames")
                        {
                            @if (ViewBag.PreviousChapterId != null && ViewBag.PreviousChapterId != -1)
                            {
                                <a href="@Url.Action("ShowNames", "Home", new { chapterId = ViewBag.PreviousChapterId })" class="nav-icon-btn" title="Previous Chapter">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            }
                            
                            @if (ViewBag.NextChapterId != null && ViewBag.NextChapterId != -1)
                            {
                                <a href="@Url.Action("ShowNames", "Home", new { chapterId = ViewBag.NextChapterId })" class="nav-icon-btn" title="Next Chapter">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer">
        <div class="container">
            &copy; @DateTime.Now.Year - Geetaji
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore-compat.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
