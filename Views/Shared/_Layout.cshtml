<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Geetaji</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Geetaji.styles.css" asp-append-version="true" />

    <style>
        /* Splash screen styling */
        /* Splash screen styling */
/* Splash screen styling */
#splash-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-image: url('@Url.Content("~/Assets/image.png")');
    background-size: contain;  /* Ensures the whole image fits inside without being cut */
    background-repeat: no-repeat; /* Prevents image from repeating */
    background-position: center center;  /* Centers the image */
    background-color: black; /* Fallback background color */
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: white;
    font-family: Arial, sans-serif;
    font-size: 30px;
    font-weight: bold;
    text-align: center;
    z-index: 9999;
    transition: opacity 1s ease-in-out;
}   

/* Responsive font size for smaller screens */
@@media (max-width: 768px) {
    #splash-screen {
        font-size: 30px;  /* Reduce font size on tablets */
    }
}

@@media (max-width: 480px) {
    #splash-screen {
        font-size: 18px;  /* Further reduce font size on small devices */
    }
}



        /* Header and Footer Styles */
        .custom-header {
            background-color: #FF8C00;
            padding: 15px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            color: white;
        }

        .custom-footer {
            background-color: #FF8C00;
            padding: 10px;
            text-align: center;
            font-size: 16px;
            font-weight: bold;
            color: white;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .nav-link {
            color: white !important;
            font-weight: bold;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            setTimeout(function () {
                document.getElementById("splash-screen").style.opacity = "0";
                setTimeout(() => {
                    document.getElementById("splash-screen").style.display = "none";
                }, 1000);
            }, 3000); // Show splash screen for 3 seconds
        });
    </script>
</head>
<body>
    <div id="splash-screen">Welcome to Geetaji</div>

    <header class="custom-header">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                  <a class="navbar-brand" href="#">Geetaji</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Favorites</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer">
        © 2025 Geetaji. All Rights Reserved.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
